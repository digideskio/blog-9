    <section>
        <div class="search">
            <%= form_tag("/search", method: "get") do %>
              <%= label_tag(:q, "Search for:") %>
              <%= text_field_tag(:q) %>
              <%= submit_tag("Search") %>
            <% end %>
        </div>
    </section>

    <nav>
        <%= link_to 'Home', root_path %> |
        <%= link_to 'Artigos', controller: 'articles' %>
    </nav>

    <hr />
